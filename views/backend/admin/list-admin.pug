extend ../layout/layout.pug
block content
	.main-content
		.section__content.section__content--p30
			.container-fluid
				.row
					.col-lg-12
						// USER DATA
						.user-data.m-b-30
							h3.title-3.m-b-30
								i.zmdi.zmdi-account-calendar
								| Danh m&#x1EE5;c ng&#x1B0;&#x1EDD;i qu&#x1EA3;n l&yacute;
							.filters.m-b-45
								.table-data__tool-right
									button.au-btn.au-btn-icon.au-btn--green.au-btn--small
										a(href='/admin/admin/creat')
											i.zmdi.zmdi-plus
											| Tạo người quản lý
							.table-responsive.table-data
								table.table
									thead
										tr
											td
												label.au-checkbox
													input(type='checkbox')
													span.au-checkmark
											td T&ecirc;n ng&#x1B0;&#x1EDD;i qu&#x1EA3;n l&yacute;
											td Email
											td Quy&#x1EC1;n h&#x1EA1;n
									tbody
										each admins, index in datas
											tr
												td
													label.au-checkbox
														input(type='checkbox')
														span.au-checkmark
												td
													.table-data__info
														h6=admins.name
												td
													span=admins.email
												td
													span.role.admin=admins.role
								if pages
									nav(aria-label='Page navigation example')
									ul.pagination.justify-content-end
										each page in pages
											li.page-item
												a.page-link(href='?page='+page)=page