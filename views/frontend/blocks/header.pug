header.header-area.section-padding-1.transparent-bar
	.header-large-device
		.header-bottom.sticky-bar
			.container-fluid
				.header-bottom-flex
					.logo-menu-wrap
						.logo
							a(href='')
								img(src='/images/logo/logo-2.png', alt='logo')
						.main-menu.menu-lh-1.main-menu-padding-1.menu-mrg-1
							nav
								ul
									li
										a(href='/') Trang chủ
									li
										a(href='/shop') Danh mục
											ul.sub-menu-width
												if !danhmuc || danhmuc===null
												else 
													each i in danhmuc
														li
															a(href='/search/'+i._id)=i.name
									li
										a(href='#') Blog
									li
										a(href='/contact') Liên Hệ
					.header-action-wrap.header-action-flex.header-action-width.header-action-mrg-1
						.search-style-1
							form(action='/shop', method='GET')
								.form-search-1
									input.input-text(name='search', value='', placeholder='Tìm kiếm', type='search')
									button
										i.icofont-search-1
						.same-style
							a(href='/account')
								i.icofont-user-alt-3
						.same-style.header-cart
							a.cart-active(href='#')
								i.icofont-shopping-cart
	.header-small-device.header-small-ptb.sticky-bar
		.container-fluid
			.row.align-items-center
				.col-6
					.mobile-logo.mobile-logo-width
						a(href='index.html')
							img(alt='', src='/images/logo/logo-2.png')
				.col-6
					.header-action-wrap.header-action-flex.header-action-mrg-1
						.same-style.header-cart
							a.cart-active(href='#')
								i.icofont-shopping-cart
						.same-style.header-info
							button.mobile-menu-button-active
								span.info-width-1
								span.info-width-2
								span.info-width-3